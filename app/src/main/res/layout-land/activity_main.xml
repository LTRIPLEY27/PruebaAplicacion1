        android:layout_weight="50" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/button"
        android:text="acabar"
        android:textSize="20sp"
        android:layout_weight="50" />

</LinearLayout>